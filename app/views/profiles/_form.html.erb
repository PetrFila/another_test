    <ul>
    <% profile.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<div class="row">
  <div class=col-lg-3></div>
    <div class="col-lg-6">


      <!-- <div class="field"> -->
        <%#= form.label :avatar do %>
          <%#= form.file_field :avatar %>
          <%#= form.hidden_field :avatar_cache %>
        <%# end %>
      <!-- </div> -->

      <!-- <%# if profile.avatar.url.present? %>
        <%#= image_tag(profile.avatar.url) %>
