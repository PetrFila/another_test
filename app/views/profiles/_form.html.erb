        <%# end %>
      <%# end %> -->

      <form>

        <div class="form-row">

          <div class="form-group col-md-12">

            <% if profile.image.present?%>
              <%= image_tag profile.image_url%>
            <% end %>

            <%= form.label :avatar %><br>
            <%#= form.hidden_field :image, value: @photo.cached_image_data %>
            <%= form.file_field :image %>

          </div>


          <div class="form-group col-md-6">
            <%= form.label :first_name %>
            <%= form.text_field :first_name, type: "text", class: "form-control", placeholder: "First name" %>
          </div>

          <div class="form-group col-md-6">
            <%= form.label :last_name %>
            <%= form.text_field :last_name, type: "text", class: "form-control", placeholder: "Last name" %>
          </div>

          <div class="form-group col-lg-12 col-md-12 col-sm-12">
            <%= form.label :title %>
            <%= form.text_field :title, type: "text", class: "form-control", placeholder: "Title"%>
          </div>

          <div class="form-group col-lg-12 col-md-12 col-sm-12">
            <%= form.label :about %>
            <%= form.text_area :about, type: "text", class: "form-control", placeholder: "About"%>
          </div>

          <%= form.submit 'Submit', type: "submit", class: "btn btn-primary" %>

          <% end %>
        </div>
      </form>
    </div>
  <div class=col-lg-3></div>
