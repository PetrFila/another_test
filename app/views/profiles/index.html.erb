<p id="notice"><%= notice %></p>

<h1>Profiles</h1>

<%= link_to 'New Profile', new_profile_path %>



<% @profiles.each do |profile| %>

<div class="row">
  <div class=col-lg-3></div>
    <div class="card border-light col-lg-6">
      <% if profile.image.present?%>
        <%= image_tag profile.image_url%>
      <% end %>
      <h3 class="card-header text-center"><%= profile.first_name %> <%= profile.last_name %></h3>
      <div class="card-body">
        <h4 class= "card-title"><%= profile.title %></h4>
      </div>
    </div>
  <div class=col-lg-3></div>
</div>


<div class="row">
  <div class=col-lg-3></div>
    <div class="col-lg-6">
      <%= link_to 'Show', profile %>
      <%= link_to 'Edit', edit_profile_path(profile) %>
      <%= link_to 'Delete', profile, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
  <div class=col-lg-3></div>
</div>
<% end %>
